{
  "private": true,
  "type": "module",
  "name": "vite-react-typescript-ssr",
  "description": "Vite로 SSR 리액트 애플리케이션 구축 예시 코드",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=3000 bun server",
    "prod": "bun run prod:csr && bun run prod:ssr",
    "prod:csr": "bunx --bun vite build --outDir dist/client",
    "prod:ssr": "bunx --bun vite build --ssr src/entry-server.tsx --outDir dist/server",
    "preview:csr": "bunx serve ./dist/client -p 3001",
    "preview:ssr": "cross-env NODE_ENV=production PORT=3002 bun server",
    "clean": "rimraf -rf dist"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "cross-env": "^10.0.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2",
    "vite": "^7.1.5"
  }
}
